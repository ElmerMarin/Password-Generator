@{
    ViewBag.Title = "Password Generator";
}

    <html>
    <head></head>
    <body>
        <div align="center">
            <h2></h2> @using (Html.BeginForm())
            {
                <br />
                <div class="input-group input-group-lg">
                    <input type="text" id="password" class="form-control" aria-label="Sizing example input" value="@ViewBag.Result" aria-describedby="inputGroup-sizing-lg">
                    <div class="input-group-prepend" onclick="myFunction()">
                        <span class="input-group-text" id="inputGroup-sizing-lg">Copy</span>
                    </div>
                </div>
                <br />
                <div class="form-check form-check-inline">
                    <label class="form-check-label" for="txtlongitud" style="padding-right:10px">Longitud</label>
                    <input type="number" id="txtlongitud" name="longitud" class="form-control" min='1' max="256" required />
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="txtnumeros" name="numeros" value="true">
                    <label class="form-check-label" for="txtnumeros">numeros</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="txtsimbolos" name="simbolos" value="true" />
                    <label class="form-check-label" for="txtsimbolos">simbolos</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="txtmayusculas" name="mayusculas" value="true" />
                    <label class="form-check-label" for="txtmayusculas">mayusculas</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="txtminusculas" name="minusculas" value="true" />
                    <label class="form-check-label" for="txtminusculas">minusculas</label>
                </div>

                <input type="submit" name="Generar" value="Generar" class="btn btn-primary" />

                <div class="alert alert-warning" role="alert" style="visibility:hidden" id="alta">
                    Seguridad Alta
                </div>
                <div class="alert alert-success" role="alert" style="visibility:hidden">
                    Seguridad Media
                </div>
                <div class="alert alert-danger" role="alert" style="visibility:hidden">
                    Seguridad Baja
                </div>

            }

        </div>
    </body>
</html>
<br />



<script type="text/javascript">
    function myFunction() {
        /* Get the text field */
        var copyText = document.getElementById("password");

        /* Select the text field */
        copyText.select();
        copyText.setSelectionRange(0, 99999); /*For mobile devices*/

        /* Copy the text inside the text field */
        document.execCommand("copy");

        /* Alert the copied text */
       
    }

    function seguridad() {
        document.getElementById("alta").style ="visibility:visible";

    }



</script>